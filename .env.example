# Environment Configuration for Python Learning Studio
# Copy this file to .env and update with your actual values

# ========================================
# Django Core
# ========================================

# SECRET_KEY (REQUIRED) - Generate a unique key for your environment
# SECURITY: Never commit your actual SECRET_KEY to version control!
# SECURITY: Use different keys for development and production!
#
# To generate a secure SECRET_KEY, run this command:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
#
# Then replace the value below with your generated key:
SECRET_KEY=REPLACE_WITH_GENERATED_KEY

DEBUG=True
DJANGO_SETTINGS_MODULE=learning_community.settings.development
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Development uses SQLite by default)
# For production, uncomment and configure PostgreSQL:
