{
  "extends": [
    "eslint:recommended",
    "@eslint/js/recommended"
  ],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "rules": {
    "no-console": ["warn", { 
      "allow": ["warn", "error"] 
    }],
    "no-restricted-syntax": [
      "error",
      {
        "selector": "CallExpression[callee.object.name='console'][callee.property.name='log'] Literal[value=/token|auth|password|secret/i]",
        "message": "Avoid logging sensitive information like tokens, auth data, passwords, or secrets"
      },
      {
        "selector": "CallExpression[callee.object.name='console'][callee.property.name='log'] BinaryExpression[left.name=/token|auth|password|secret/i]",
        "message": "Avoid logging sensitive information like tokens, auth data, passwords, or secrets"
      }
    ]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}